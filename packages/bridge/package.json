{
  "name": "@openweb3-apps/bridge",
  "version": "1.3.0",
  "description": "TypeScript package to provide communication layer between Mini App and Openweb3 application.",
  "author": "Vladislav Kibenko <wolfram.deus@gmail.com>",
  "homepage": "https://github.com/openweb3-io/miniapps#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:openweb3-io/miniapps.git",
    "directory": "packages/bridge"
  },
  "bugs": {
    "url": "https://github.com/openweb3-io/miniapps/issues"
  },
  "keywords": [
    "openweb3-mini-apps",
    "typescript",
    "bridge"
  ],
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "tsconfig.json"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/dts/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/dts/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "vitest --run",
    "lint": "cd ../.. && eslint packages/bridge/src --ignore-pattern **/*.test.ts",
    "lint:fix": "pnpm run lint --fix",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "build": "rimraf dist && pnpm run build:default && pnpm run build:iife",
    "build:default": "vite build -c vite.config.ts",
    "build:iife": "vite build -c vite.iife.config.ts"
  },
  "dependencies": {
    "@openweb3-apps/signals": "workspace:^",
    "@openweb3-apps/toolkit": "workspace:^",
    "@openweb3-apps/transformers": "workspace:^",
    "@openweb3-apps/types": "workspace:^"
  },
  "devDependencies": {
    "test-utils": "workspace:*",
    "tsconfig": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
